@using Microsoft.AspNetCore.Components;
@using Microsoft.AspNetCore.Components.Web;
@using GamesApp.Models;
@using GamesApp.Services;
@inject JsonFileCardService CardService;

<div class="container-fluid wrapper deck mb-5">
    @foreach (var card in CardService.updateCardOrder().OrderBy(card => card.Order))
    {
        <div class="memory-card" data-value="@card.Value" data-target="#cardModal" data-toggle="modal" @onclick="GreetMe">
            <div class="faces">
                <div class="face front"><img src="@card.FrontImage" /></div>
                <div class="face back"></div>
            </div>
        </div>
    }
</div>


@Message

@code {
    string Message { get; set; }

    void GreetMe()
    {
        Message = "Hello";
    }
}
